// ================================== LIST OF KEYS ==================================== //
//                                                                                      //
// [ctrl+shift+\] View: Hide Editor Tabs                                                //
// [ctrl+\] Open Explorer                                                               //
// [ctrl+k] Editor: Open Keyboard Cheat Sheet                                           //
// [ctrl+h] Previous Tab on Editor                                                      //
// [ctrl+l] Next Tab on Editor                                                          //
// [ctrl+s] Save File                                                                   //
// [ctrl+q] Close all Editors                                                           //
// [ctrl+b] Copy Relative Path                                                          //
// [ctrl+p] Search Project                                                              //
// [ctrl+f] Search Workspace                                                            //
// [ctrl+g] Search Workspace: Toggle Replace                                            //
// [ctrl+j] Go down in search page, command palette or file finder                      //
// [ctrl+k] Go up in search page, command palette or file finder                        //
// [ctrl+shift+j] Multicursor: Select Next                                              //
// [ctrl+shift+k] Multicursor: Select Previous                                          //
// [ctrl+n] Create Editor                                                               //
// [ctrl+w] Close Editor                                                                //
// [ctrl+c] Toggle Comment                                                              //
// [a] File Explorer: Create File                                                       //
// [y] File Explorer: Copy File                                                         //
// [m] File Explorer: Move File                                                         //
// [p] File Explorer: Paste File                                                        //
// [r] File Explorer: Rename File                                                       //
// [d] File Explorer: Delete File                                                       //
// [w] File Explorer: Remove Folder from Workspace                                      //
// [<space> i] Show tooltip hover message                                               //
// [<space> c t] Close toast popup                                                      //
// [<space> s r] Sort lines: Reverse                                                    //
// [<space> s a] Sort lines: Ascending                                                  //
// [<space> s d] Sort lines: Descending                                                 //
// [<space> t w] Toggle settings: Text Wrap                                             //
// [<space> d c] dev: open key context view                                             //
//                                                                                      //
// ==================================================================================== //
[
  // ================================================================================== //
  // [ctrl+shift+\] View: Hide Editor Tabs                                              //
  // ================================================================================== //
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-|": "editor::ToggleTabBar",
    },
  },
  // ================================================================================== //
  // [ctrl+\] Open Explorer                                                             //
  // ================================================================================== //
  {
    "context": "!Editor && !Terminal && !Search",
    "bindings": {
      "ctrl-\\": "workspace::ToggleRightDock",
    },
  },
  {
    "context": "Editor || Terminal || Search",
    "bindings": {
      "ctrl-\\": "project_panel::ToggleFocus",
    },
  },
  // ================================================================================== //
  // [ctrl+k] Editor: Open Keyboard Cheat Sheet                                         //
  // ================================================================================== //
  {
    "context": "!multibuffer && !(showing_code_actions || showing_completions)",
    "bindings": {
      "ctrl-k": "zed::OpenKeymapFile",
    },
  },
  // ================================================================================== //
  // [ctrl+h] Previous Tab on Editor                                                    //
  // ================================================================================== //
  {
    "context": "vim_mode == normal || vim_mode == visual || vim_mode == operator",
    "bindings": {
      "ctrl-h": "pane::ActivatePreviousItem",
    },
  },
  // ================================================================================== //
  // [ctrl+l] Next Tab on Editor                                                        //
  // ================================================================================== //
  {
    "context": "vim_mode == normal || vim_mode == visual || vim_mode == operator",
    "bindings": {
      "ctrl-l": "pane::ActivateNextItem",
    },
  },
  // ================================================================================== //
  // [ctrl+s] Save File                                                                 //
  // ================================================================================== //
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-s": "workspace::Save",
    },
  },
  // ================================================================================== //
  // [ctrl+q] Close all Editors                                                         //
  // ================================================================================== //
  {
    "context": "vim_mode == normal || vim_mode == visual || vim_mode == operator",
    "bindings": {
      "ctrl-q": "pane::CloseAllItems",
    },
  },
  // ================================================================================== //
  // [ctrl+b] Copy Relative Path                                                        //
  // ================================================================================== //
  {
    "context": "vim_mode == normal || vim_mode == visual || vim_mode == operator",
    "bindings": {
      "ctrl-b": "workspace::CopyRelativePath",
    },
  },
  // ================================================================================== //
  // [ctrl+p] Search Project                                                            //
  // ================================================================================== //
  {
    "bindings": {
      "ctrl-p": "file_finder::Toggle",
    },
  },
  // ================================================================================== //
  // [ctrl+f] Search Workspace                                                          //
  // ================================================================================== //
  {
    "context": "vim_mode == normal || vim_mode == visual || vim_mode == operator",
    "bindings": {
      "ctrl-f": "pane::DeploySearch",
    },
  },
  // ================================================================================== //
  // [ctrl+g] Search Workspace: Toggle Replace                                          //
  // ================================================================================== //
  {
    "context": "multibuffer || ProjectSearchBar",
    "bindings": {
      "ctrl-g": "search::ToggleReplace",
    },
  },
  // ================================================================================== //
  // [ctrl+j] Go down in search page, command palette or file finder                    //
  // ================================================================================== //
  {
    "context": "multibuffer",
    "bindings": {
      "ctrl-j": "search::SelectNextMatch",
    },
  },
  {
    "context": "Picker > Editor",
    "bindings": {
      "ctrl-j": "menu::SelectNext",
    },
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "ctrl-j": "editor::ContextMenuNext",
    },
  },
  // ================================================================================== //
  // [ctrl+k] Go up in search page, command palette or file finder                      //
  // ================================================================================== //
  {
    "context": "multibuffer",
    "bindings": {
      "ctrl-k": "search::SelectPreviousMatch",
    },
  },
  {
    "context": "Picker > Editor",
    "bindings": {
      "ctrl-k": "menu::SelectPrevious",
    },
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "ctrl-k": "editor::ContextMenuPrevious",
    },
  },
  // ================================================================================== //
  // [ctrl+shift+j] Multicursor: Select Next                                            //
  // ================================================================================== //
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-j": "editor::SelectNext",
    },
  },
  // ================================================================================== //
  // [ctrl+shift+k] Multicursor: Select Previous                                        //
  // ================================================================================== //
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-k": "editor::SelectPrevious",
    },
  },
  // ================================================================================== //
  // [ctrl+n] Create Editor                                                             //
  // ================================================================================== //
  {
    "context": "vim_mode == normal || vim_mode == visual || vim_mode == operator",
    "bindings": {
      "ctrl-n": "workspace::NewFile",
    },
  },
  // ================================================================================== //
  // [ctrl+w] Close Editor                                                              //
  // ================================================================================== //
  {
    "bindings": {
      "ctrl-w": "pane::CloseActiveItem",
    },
  },
  // ================================================================================== //
  // [ctrl+c] Toggle Comment                                                            //
  // ================================================================================== //
  {
    "context": "vim_mode == normal || vim_mode == visual || vim_mode == operator",
    "bindings": {
      "ctrl-c": "editor::ToggleComments",
    },
  },
  // ================================================================================== //
  // [a] File Explorer: Create File                                                     //
  // ================================================================================== //
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "a": "project_panel::NewFile",
    },
  },
  // ================================================================================== //
  // [y] File Explorer: Copy File                                                       //
  // ================================================================================== //
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "y": "project_panel::Copy",
    },
  },
  // ================================================================================== //
  // [m] File Explorer: Move File                                                       //
  // ================================================================================== //
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "m": "project_panel::Cut",
    },
  },
  // ================================================================================== //
  // [p] File Explorer: Paste File                                                      //
  // ================================================================================== //
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "p": "project_panel::Paste",
    },
  },
  // ================================================================================== //
  // [r] File Explorer: Rename File                                                     //
  // ================================================================================== //
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "r": "project_panel::Rename",
    },
  },
  // ================================================================================== //
  // [d] File Explorer: Delete File                                                     //
  // ================================================================================== //
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "d": "project_panel::Delete",
    },
  },
  // ================================================================================== //
  // [w] File Explorer: Remove Folder from Workspace                                    //
  // ================================================================================== //
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "w": "project_panel::Delete",
    },
  },
  // ================================================================================== //
  // [<space> i] Show tooltip hover message                                             //
  // ================================================================================== //
  {
    "context": "vim_mode == normal || vim_mode == visual || vim_mode == operator",
    "bindings": {
      "space i": "editor::Hover",
    },
  },
  // ================================================================================== //
  // [<space> c t] Close toast popup                                                    //
  // ================================================================================== //
  {
    "bindings": {
      "space c t": "menu::Cancel",
    },
  },
  // ================================================================================== //
  // [<space> s r] Sort lines: Reverse                                                  //
  // ================================================================================== //
  {
    "context": "vim_mode == visual",
    "bindings": {
      "space s r": "editor::ReverseLines",
    },
  },
  // ================================================================================== //
  // [<space> s a] Sort lines: Ascending                                                //
  // ================================================================================== //
  {
    "context": "vim_mode == visual",
    "bindings": {
      "space s a": [
        "workspace::SendKeystrokes",
        ": !sort space - n space - k space 2 enter",
      ],
    },
  },
  // ================================================================================== //
  // [<space> s d] Sort lines: Descending                                               //
  // ================================================================================== //
  {
    "context": "vim_mode == visual",
    "bindings": {
      "space s d": [
        "workspace::SendKeystrokes",
        ": !sort space - nr space - k space 2 enter",
      ],
    },
  },
  // ================================================================================== //
  // [<space> t w] Toggle settings: Text Wrap                                           //
  // ================================================================================== //
  {
    "context": "vim_mode == normal || vim_mode == visual || vim_mode == operator",
    "bindings": {
      "space t w": "editor::ToggleSoftWrap",
    },
  },
  // ================================================================================== //
  // [<space> d c] dev: open key context view                                           //
  // ================================================================================== //
  {
    "bindings": {
      "space d c": "dev::OpenKeyContextView",
    },
  },
]
